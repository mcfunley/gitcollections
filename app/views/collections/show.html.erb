<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1><%= @collection.name %> <small><%= @collection.description %></small></h1>
</div>

<%= link_to 'New Project', new_project_path, class: 'btn btn-primary' %>

<table class="table">
  <caption><%= @collection.name %>'s Projects</caption>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', collections_path, class: 'btn btn-default' %> |
<%= link_to 'Edit', edit_collection_path(@collection), class: 'btn btn-default' %>
