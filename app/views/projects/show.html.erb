<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1><%= @project.name %> <small><%= @project.description %></small></h1>
</div>

<% unless @issues.empty? %>
  <table class="table">
    <caption><%= @project.name %>'s Issues</caption>
    <thead>
      <tr>
        <th>Title</th>
        <th>Url</th>
        <th>Labels</th>
        <th>Project</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @issues.each do |issue| %>
        <tr>
          <td><%= issue.title %></td>
          <td><%= issue.url %></td>
          <td><%= issue.labels %></td>
          <td><%= link_to issue.project.name, issue.project %></td>
          <td><%= link_to 'Show', issue %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to 'New Project', new_project_path, class: 'btn btn-primary' %> |
<%= link_to 'Back', projects_path, class: 'btn btn-default' %> |
<%= link_to 'Edit', edit_project_path(@project), class: 'btn btn-default' %> |
<%= link_to 'Update', update_from_github_project_path(@project), method: :put, class: 'btn btn-success' %>
