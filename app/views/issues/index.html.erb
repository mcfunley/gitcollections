<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Issues</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Labels</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.title %></td>
        <td><%= issue.url %></td>
        <td><%= issue.labels %></td>
        <td><%= link_to issue.project.name, issue.project %></td>
        <td><%= link_to 'Show', issue %></td>
      </tr>
    <% end %>
  </tbody>
</table>
